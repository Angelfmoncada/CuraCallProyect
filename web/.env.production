# Production Environment Variables for Netlify
# This file configures the app to work in demo mode when no backend is available

# App Configuration
NEXT_PUBLIC_APP_URL=https://curacall-ai-voice-chat.netlify.app

# API Configuration - Set to demo mode (no backend)
# NEXT_PUBLIC_API_BASE_URL=https://your-backend-api.com
# Leave API_BASE_URL commented out to enable demo mode

# Voice & TTS Configuration - Disabled for demo
NEXT_PUBLIC_TTS_ENABLED=false
NEXT_PUBLIC_VOICE_RECOGNITION_ENABLED=false

# Feature Flags
NEXT_PUBLIC_VOICE_MODE_DEFAULT=false
NEXT_PUBLIC_DEBUG_MODE=false

# Build Configuration
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=production